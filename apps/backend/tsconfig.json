{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@pms-mvp/shared": ["../../packages/shared"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}