{
  "name": "pms-mvp-backend",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:test": "ts-node src/utils/test-postgres-connection.ts",
    "db:initial": "node ./dist/utils/run-sql.js db/pms.sql",
    "db:schema": "node ./dist/utils/run-sql.js db/pms.sql",
    "db:seed-passwords": "ts-node src/utils/seed-user-passwords.ts",
    "db:seed": "node ./dist/utils/run-sql.js db/seed.sql",
    "db:verify": "ts-node src/utils/verify-schema.ts",
    "auth:set-password": "ts-node src/utils/set-password.ts",
    "db:init": "yarn build && node ./dist/utils/run-sql.js db/pms.sql db/seed.sql",
    "db:drop:pms": "node ./dist/utils/run-sql.js db/drop_pms.sql",
    "db:drop:all-schemas": "node ./dist/utils/run-sql.js db/drop_all_schemas.sql",
    "db:drop:users": "node ./dist/utils/run-sql.js db/drop_users.sql",
    "db:init:utils": "ts-node src/utils/init-data.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-plugin-promise": "^7.2.1",
    "express": "~5.0.0",
    "morgan": "~1.9.1",
    "multer": "2.0.2",
    "pg": "^8.13.1",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
